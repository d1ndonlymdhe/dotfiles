#!/bin/bash

case "$1" in
  "-s") maim -s | tee ~/pics/Screenshots/$(date "+%s").png | xclip -selection clipboard -t image/png
  ;;
  *) maim | tee ~/pics/Screenshots/$(date "+%s").png | xclip -selection clipboard -t image/png
  ;;
esac

notify-send -i ~/.config/icons/picture.png "Image copied to clipboard"
