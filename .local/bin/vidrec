#!/bin/sh


dest=$HOME/vids/recs
[ -d $dest ] || mkdir -p $dest 

filename="$dest/$(date '+%F_%H-%M-%S').$1"

if [ "$2" = "tty" ]; then
  sudo ffmpeg -f alsa -i hw:0 -f fbdev -i /dev/fb0 "$filename"
else
  res="$(xrandr | grep '*' | awk '{ print $1 }')"
  ffmpeg -y -f x11grab -s $res -i :0.0 -f alsa -i default  "$filename"
fi
