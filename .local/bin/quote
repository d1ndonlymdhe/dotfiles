#!/bin/bash

file=$HOME/.local/share/quotes

line="$(shuf -n1 $file)"
quote="$(echo "$line" | sed 's/\t.*//')"
author="$(echo "$line" | sed 's/.*\t//')"

echo
echo -e "\e[1;37müìò $quote"
echo -e "\e[1;33m‚úçÔ∏è  $author"
echo

